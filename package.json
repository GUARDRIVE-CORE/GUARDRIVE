  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/symbeon/mcp-servers.git"
  },
  "bugs": {
    "url": "https://github.com/symbeon/mcp-servers/issues"
  },
  "homepage": "https://github.com/symbeon/mcp-servers#readme",
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.12.3"
  }
